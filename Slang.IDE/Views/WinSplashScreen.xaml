<Window x:Class="Slang.IDE.Views.WinSplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Slang.IDE.Views"
        mc:Ignorable="d"
        WindowStyle="None"
        ResizeMode="NoResize"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded"
        Title="WinSplashScreen" Height="450" Width="600">
    <Grid>
        <Image x:Name="imgSplashScreen" Source="/Resources/slang_ide.png" Width="350"/>
        <Label x:Name="lblTitle" Content="IDE" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="72" FontWeight="Bold" Margin="350, 300, 0, 0"/>
    </Grid>
</Window>
